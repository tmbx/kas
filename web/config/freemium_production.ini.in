# kwmo - Pylons production environment configuration
# The %(here)s variable will be replaced with the parent directory of this file

[DEFAULT]
debug = false

[server:main]
use = egg:Paste#http
host = 127.0.0.1
port = 5000

[app:main]
use = egg:freemium
static_files = true
cache_dir = /tmp/freemium/data
beaker.session.type = ext:database
beaker.session.url = postgres:///kwmo?host=/var/run/postgresql/
beaker.session.cookie_expires = False
beaker.session.key = freemium
beaker.session.secret = somesecret

freemium_db_user = freemium
freemium_db_pwd = freemium_replace_this_password
freemium_db_host = localhost
freemium_db_port = 5432
freemium_db_name = freemium

# RPC url and credentials
# FIXME hard-coded xmlrpc url
rpc_url = https://localhost:9000/kpsapi/tbsos-xmlrpc.py
rpc_login = freemium
rpc_password = hard-coded-pass

set debug = false

url_scheme = https

# Fake sqlalchemy url to make shabti work (drop_sql, reset_sql, ...)
sqlalchemy.url = postgres:///junk?host=/var/run/postgresql/

[loggers]
keys = root,routes,sqlalchemy,freemium

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[logger_routes]
level = WARN
handlers = console
qualname = routes.middleware

[logger_freemium]
level = DEBUG
handlers = console
qualname = freemium

[logger_sqlalchemy]
level = WARNING
handlers = console
qualname = sqlalchemy.engine

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s,%(msecs)03d %(levelname)-5.5s [%(name)s] %(message)s
datefmt = %H:%M:%S

